model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  role      UserRole
  status    UserStatus @default(ACTIVE)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  admin     Admin?
  vendor    Vendor?
  customer  Customer?

  @@map("users")
  ReviewReply ReviewReply[]
  
}



model Admin {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  image     String?
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [email], references: [email])

  @@map("admins")
}



model Customer {
  id                String              @id @default(uuid())
  name              String
  email             String              @unique
  image             String?
  address           String?
  phone             String?
  isDeleted         Boolean             @default(false)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  orders            Order[]
  reviews           Review[]
  following         Follow[]
  recentProductView RecentProductView[]
  customerCoupons   CustomerCoupon[]
  user              User                @relation(fields: [email], references: [email])

  @@map("customers")
}



model Vendor {
  id          String    @id @default(uuid())
  name        String
  email       String    @unique
  shopName    String?
  logo        String?
  description String?
  isDeleted   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]
  followers   Follow[]
  orders      Order[]
  review      Review[]
  user        User      @relation(fields: [email], references: [email])

  @@map("vendors")
}
